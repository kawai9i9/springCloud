<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <appender name="CONSOLE_LOG" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger- %msg%n</pattern>
        </layout>
    </appender>

    <appender name="DB_LOG" class="ch.qos.logback.classic.db.DBAppender">
        <connectionSource class="ch.qos.logback.core.db.DataSourceConnectionSource">
            <dataSource class="com.alibaba.druid.pool.DruidDataSource">
                <driverClassName>com.mysql.cj.jdbc.Driver</driverClassName>
                <url>jdbc:mysql://192.168.198.128:3306/test?Unicode=true&amp;characterEncoding=UTF-8&amp;useSSL=false</url>
                <username>root</username>
                <password>weilus</password>
            </dataSource>
        </connectionSource>
        <dbNameResolver class="com.weilus.commons.logging.resolver.DateSuffixDBNameResolver"></dbNameResolver>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_LOG" />
        <appender-ref ref="DB_LOG" />
    </root>
</configuration>